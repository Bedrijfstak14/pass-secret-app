body {
  font-family: Arial, sans-serif;
  background: {{ background_color }};
  color: #333;
  padding: 2rem;
}

.container {
  max-width: 700px;
  margin: auto;
  background: white;
  padding: 2rem;
  border-radius: 8px;
  box-shadow: 0 2px 6px rgba(0,0,0,0.1);
}

h1, h2 {
  color: #222;
}

ul {
  margin-bottom: 2rem;
}

.form-group {
  margin-bottom: 1.5rem;
}

label {
  display: block;
  font-weight: bold;
  margin-bottom: 0.5rem;
}

textarea,
input[type="number"],
input[type="text"] {
  width: 100%;
  padding: 0.75rem;
  border: 1px solid #ccc;
  border-radius: 4px;
  resize: vertical;
}

button {
  background: {{ button_color }};
  color: white;
  padding: 0.75rem 1.5rem;
  border: none;
  border-radius: 4px;
  cursor: pointer;
  font-size: 1rem;
  transition: background 0.2s ease;
}

button:hover {
  background: {{ hover_button_color }};
}

header {
  text-align: center;
  margin-bottom: 2rem;
}

header img {
  height: 60px;
  max-width: 100%;
  object-fit: contain;
}
.secret-box {
  background-color: #f9f9f9;
  border: 1px dashed #bbb;
  padding: 1rem;
  margin-top: 1rem;
  white-space: pre-wrap;
  font-family: monospace;
  font-size: 1rem;
  border-radius: 4px;
}

.meta-info {
  color: #666;
  font-size: 0.9rem;
  margin-top: 0.5rem;
}

.warning {
  color: #a94442;
  background-color: #f2dede;
  border: 1px solid #ebccd1;
  padding: 0.75rem;
  border-radius: 4px;
  margin-top: 1rem;
  font-weight: bold;
}
